{
  "name": "shift-refactor",
  "version": "2.0.0",
  "description": "A suite of utilities to query and modify JavaScript source",
  "keywords": [
    "refactor",
    "transform",
    "javascript",
    "ecmascript",
    "ast",
    "shift",
    "esprima",
    "esquery",
    "spidermonkey",
    "acorn",
    "babel"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jsoverson/shift-refactor"
  },
  "license": "Apache-2.0",
  "author": "Jarrod Overson",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "test",
    "src"
  ],
  "scripts": {
    "build": "tsc --declaration",
    "build-all": "npm run compile && npm run extract-api && npm run generate-docs",
    "clean": "rm -rf dist && rm -rf generated",
    "compile": "npm run clean && npm run build",
    "docrunner": "ts-node -O '{\"resolveJsonModule\":true}' test/docrunner/examples.ts",
    "extract-api": "ts-node scripts/api-extractor.ts",
    "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "generate-docs": "ts-node scripts/doc-generator.ts",
    "prepublishOnly": "npm run build-all",
    "test": "mocha",
    "test-examples": "npm run extract-api && npm run docrunner",
    "test:all": "( (npm run build-all) && (npm run test) )",
    "watch": "npm run clean && tsc -w --declaration"
  },
  "dependencies": {
    "@jsoverson/shift-codegen": "^7.0.0",
    "debug": "^4.4.3",
    "fast-deep-equal": "^3.1.3",
    "shift-ast": "^7.0.0",
    "shift-parser": "^8.0.0",
    "shift-printer": "^1.0.1",
    "shift-query": "^1.0.2",
    "shift-scope": "^6.0.0",
    "shift-traverser": "^1.0.0",
    "shift-validator": "^6.0.0"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.53.3",
    "@microsoft/tsdoc": "^0.15.1",
    "@types/chai": "^5.2.3",
    "@types/debug": "^4.1.12",
    "@types/find-root": "^1.1.4",
    "@types/lodash.template": "^4.5.3",
    "@types/mocha": "^10.0.10",
    "@types/multimap": "^1.1.4",
    "@types/node": "^24.10.0",
    "assert-diff": "^3.0.4",
    "chai": "^6.2.0",
    "find-root": "^1.1.0",
    "lodash.template": "^4.5.0",
    "mocha": "^11.7.4",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
